@model WebApplication2.Models.Voiture

@{
    ViewBag.Title = "CherCher une Voiture";
}
<h2>Create</h2>


<form method="post" action="@Url.Action("AfficherListeVoiture", "Users")">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Model", ViewData["Model"] as List<SelectListItem>, "")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Brand, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Brand", ViewData["Brand"] as List<SelectListItem>, "")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Position", ViewData["Position"] as List<SelectListItem>, "")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Chercher" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
